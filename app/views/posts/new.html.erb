<main role="main">
  <section class="visits pt-4 pb-4">
    <div class="container">
      <h1>Create new post:</h1>
      <%= form_for :post, url: posts_path do |f| %>

        <div class="form-group">
          <%= f.label :post_title %>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Add title' %>
        </div>

        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_field :content, class: 'form-control', placeholder: 'Add content' %>
        </div>

        <div class="form-group">
          <%= f.label :file %>
          <%= f.file_field :file, class: 'form-control-file' %>
        </div>
        
        <%= f.submit  :class => 'btn btn-primary' %>
      <% end %>
    </div>
  </section>
</main>